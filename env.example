# Configuration de la base de données
DATABASE_URL="sqlserver://username:password@server:port/database?schema=dbo&encrypt=true&trustServerCertificate=false&connectionTimeout=30&requestTimeout=30"

# Configuration JWT
JWT_SECRET="votre-secret-jwt-tres-securise"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_SECRET="votre-refresh-secret-tres-securise"
JWT_REFRESH_EXPIRES_IN="7d"

# Configuration de l'application
NODE_ENV="development"
PORT=3000

# Configuration CORS - Liste des origines autorisées (séparées par des virgules)
# Exemples pour le développement :
CORS_ORIGINS="http://localhost:3000,http://localhost:3001,http://127.0.0.1:3000"
# Exemples pour la production :
# CORS_ORIGINS="https://app1.votredomaine.com,https://app2.votredomaine.com,https://admin.votredomaine.com"

# Configuration de sécurité
BCRYPT_ROUNDS=12
SESSION_TIMEOUT=3600000

# Configuration des logs
LOG_LEVEL="info"
